<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#2196F3">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zakat Estimator"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Gold Weight (grams)"
        android:inputType="numberDecimal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />


    <RadioGroup
        android:id="@+id/goldTypeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">
        <RadioButton
            android:id="@+id/keepGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep"
            android:textColor="#FFFFFF" />
        <RadioButton
            android:id="@+id/wearGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wear"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <EditText
        android:id="@+id/goldValueInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Gold Value (RM)"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#03DAC5"
        android:text="Calculate Zakat"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/zakatPayableLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zakat Payable Value:"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/zakatPayableView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/totalZakatLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Zakat:"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/totalZakatView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#FF5722"
        android:text="Clear"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/backHomeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        android:text="Back to Home"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>
