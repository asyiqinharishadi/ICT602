<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#2196F3">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="About Page"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Image View -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/def" />

    <!-- About Content -->
    <TextView
        android:id="@+id/aboutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Developed by:\nNurul Asyiqin binti Harishadi\nStudent No: 2023390153\nCopyright: 2024"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center" />

    <!-- GitHub Link -->
    <TextView
        android:id="@+id/githubLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="GitHub: https://github.com/asyiqinharishadi"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center" />

    <!-- Back to Home Button -->
    <Button
        android:id="@+id/backHomeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FF9800"
        android:text="Back to Home"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Share Button -->
    <Button
        android:id="@+id/shareButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FF9800"
        android:text="Share"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>
